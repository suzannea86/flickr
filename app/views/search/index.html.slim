= form_tag({:controller => 'search', :action => 'index'}, :method => 'get') do
  = text_field_tag :search, params[:search], :id => 'search_field'
  = submit_tag "Search", :name => nil
- if @search_results
  - @search_results.each do |result|
    = link_to FlickRaw.url result do
      = image_tag FlickRaw.url_s result
    br
    = result.title
    br
  
  = link_to("Â« prev", root_path(:page => @search_results.page - 1, :search => params[:search])) if @search_results.page > 1
  = "  #{@search_results.page} / #{@search_results.pages}  "
  = link_to("next Â»", root_path(:page => @search_results.page + 1, :search => params[:search])) if @search_results.page < @search_results.pages

